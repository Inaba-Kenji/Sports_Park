<h1>募集サイト一覧</h1>

<main role="main" class="container">

    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h6 class="border-bottom border-gray pb-2 mb-0">募集一覧</h6>
      <% @recruitments.each do |recruitment| %>
        <div class="media text-muted pt-3">
          <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32">
            <%= attachment_image_tag(recruitment.user, :profile_image, :fill, 32, 32, class:"bd-placeholder-img mr-2 rounded", fallback: "no-image-icon.jpg") %>
          </svg>
          <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">タイトル</strong>
            <strong class="d-block text-gray-dark mx-auto" style="width: 200px;"><%= recruitment.title %></strong>
            <strong class="d-block text-gray-dark">開催日</strong>
            <strong class="d-block text-gray-dark mx-auto" style="width: 200px;"><%= recruitment.event_date %></strong>
            <strong class="d-block text-gray-dark">開催場所</strong>
            <strong class="d-block text-gray-dark mx-auto" style="width: 200px;"><%= recruitment.place %></strong>
            <strong class="d-block text-gray-dark">値段</strong>
            <strong class="d-block text-gray-dark mx-auto" style="width: 200px;"><%= recruitment.price %></strong>
            <strong class="d-block text-gray-dark mx-auto" style="width: 200px;"><%= link_to "詳細", recruitment_path(recruitment), class: "d-block text-gray-dark mx-auto" %></strong>
            <% if recruitment.user.id == current_user.id %>
              <strong class="d-block text-gray-dark mx-auto" style="width: 200px;"><%= link_to '削除', recruitment_path(recruitment), class: "destroy", method: :delete %></strong>
              <strong class="d-block text-gray-dark mx-auto" style="width: 200px;"><%= link_to '編集', edit_recruitment_path(recruitment), class: "edit"%></strong>
            <% end %>
          </p>
        </div>
      <% end %>

      <small class="d-block text-right mt-3">
        <a href="#">All updates</a>
      </small>
    </div>

    <%= link_to "募集情報を作成する", new_recruitment_path, class: "btn btn-success offset-md-5 col-md-2" %>

</main>
