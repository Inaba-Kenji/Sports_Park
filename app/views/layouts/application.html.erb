<!DOCTYPE html>
<html>
  <head>
    <title>SportsPark</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="box">
    <div id="header">
      <%= render "layouts/header" %>
    </div>

    <div class="container">
      <%= yield %>
    </div>

    <%= render "layouts/footer" %>
  </body>

</html>
