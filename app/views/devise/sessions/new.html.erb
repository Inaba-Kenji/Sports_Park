

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: "form-horizontal" } )  do |f| %>

  <div class="form-group">
		<h1 class="col-sm-12 control-label" for="InputEmail">ログイン<h1>
		<div class="col-sm-4">
		</div>
  </div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="InputEmail">メールアドレス</label>
		<div class="col-sm-4">
			<%= f.email_field :email, autofocus: true, class: "email form-control" %>
		</div>
  </div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="InputEmail">パスワード</label>
		<div class="col-sm-4">
			<%= f.password_field :password, autofocus: true, class: "password form-control" %>
		</div>
  </div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="InputEmail"></label>
		<div class="col-sm-4">
			<%= f.submit "ログイン" ,class: "btn btn-primary" %>
		</div>
  </div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="InputEmail"></label>
		<div class="col-sm-4">
			<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
		</div>
  </div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="InputEmail"></label>
		<div class="col-sm-4">
			<%= render "devise/shared/links" %>
		</div>
  </div>

<% end %>


